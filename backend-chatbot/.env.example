# ====================================
# EXEMPLE DE CONFIGURATION CHATBOT RH
# ====================================
# Copiez ce fichier en .env et remplissez vos valeurs

# ---- CONFIGURATION OPENAI (OBLIGATOIRE) ----
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o
OPENAI_MAX_TOKENS=300
OPENAI_TEMPERATURE=0.7

# ---- CONFIGURATION DES DONNÉES ----
DATA_PATH=data/Nestle-HR-FAQ.json
MODEL_DIR=model

# ---- CONFIGURATION ML ----
CONFIDENCE_THRESHOLD=1.0
TFIDF_MAX_FEATURES=5000
TFIDF_NGRAM_RANGE=2
TFIDF_MIN_DF=1
TFIDF_MAX_DF=0.95
CLASSIFIER_MAX_FEATURES=3000
CLASSIFIER_NGRAM_RANGE=2
NAIVE_BAYES_ALPHA=0.1

# ---- CONFIGURATION DEBUG ----
DEBUG=false

# ---- CONFIGURATION SYSTÈME ----
LOG_LEVEL=INFO
LOG_FILE=chatbot.log
API_TIMEOUT=30
MAX_RETRIES=3

# ---- CONFIGURATION ENTREPRISE ----
COMPANY_NAME=Nestlé
DEFAULT_LANGUAGE=fr
TIMEZONE=Europe/Paris

# Message système pour l'IA
SYSTEM_MESSAGE=You are an HR assistant for Nestle. Answer in French in a professional and helpful manner. Limit your response to 200 words maximum.